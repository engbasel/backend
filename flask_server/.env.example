# ============================================
# NeuroAid Flask Backend Configuration
# ============================================

# Server Configuration
# --------------------
PORT=3001
NODE_ENV=development

# AI Services URLs
# ----------------
# These are the Python Flask microservices for AI features
# Make sure all services are running before starting the backend
AI_CHATBOT_URL=http://localhost:5001
AI_STROKE_QA_URL=http://localhost:5002
AI_STROKE_IMAGE_URL=http://localhost:5003

# JWT Configuration
# -----------------
# IMPORTANT: Change JWT_SECRET in production!
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
# ----------------------
# Currently using JSON file database
# For production, consider PostgreSQL or MongoDB
DB_PATH=./data/db.json

# Upload Configuration
# --------------------
# Maximum file size for uploads (in bytes)
# Default: 10MB = 10 * 1024 * 1024 = 10485760
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Flask Configuration
# -------------------
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
